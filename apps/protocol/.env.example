# Deployment Configuration

# Required for all deployments
PRIVATE_KEY=0x...

# Required for DeployTokenSale
FACTORY_ADDRESS=0x...
FUNDING_TOKEN=0x...      # Address of USDC or other ERC20
BENEFICIARY=0x...        # Address that receives funds

# Optional - Token Configuration
TOKEN_NAME="My Refundable Token"
TOKEN_SYMBOL="MRT"
MAX_SUPPLY=1000000000000000000000000  # 1M tokens (with 18 decimals)

# Optional - Sale Configuration
CREATE_SALE=true
SALE_AMOUNT=100000000000000000000000   # 100k tokens
PURCHASE_PRICE=1                       # 1:1 ratio (1 wei funding per 1 wei token)
SALE_START_BLOCK=0                     # 0 = current block
SALE_END_BLOCK=0                       # 0 = current block + 100k
REFUNDABLE_BPS_START=8000              # 80% refundable
REFUNDABLE_DECAY_DELAY=43200           # ~1 week (assuming 12s blocks)
REFUNDABLE_DECAY_DURATION=86400        # ~2 weeks

# Optional - for verification
ETHERSCAN_API_KEY=...
